---
const { item, index } = Astro.props;

// Clases para el efecto de arco según la posición
const arcClasses: Record<number, string> = {
    0: "translate-y-10 -rotate-[8deg]",
    1: "translate-y-4 -rotate-[4deg]",
    2: "translate-y-0 rotate-0",
    3: "translate-y-4 rotate-[4deg]",
    4: "translate-y-10 rotate-[8deg]",
};

const arcClass = arcClasses[index] || "translate-y-0 rotate-0";
---

<div class={`tour-card text-center transition-transform duration-300 hover:-translate-y-2 ${arcClass}`}>
    <a href={item.href || "#"} class="block no-underline group">
        <img
            src={item.image}
            alt={item.name}
            class="w-full aspect-[4/5] object-cover rounded-[2rem] shadow-lg mb-5 transition-transform duration-500 group-hover:scale-[1.02]"
        />
        <h4 class="font-bold text-xl text-gray-800 mb-1 group-hover:text-[#0B3C6D] transition-colors">
            {item.name}
        </h4>
        <span class="text-xs uppercase tracking-widest text-gray-500 group-hover:text-[#2EC4C6] transition-colors">
            Ver más
        </span>
    </a>
</div>

<style>
    /* Responsivo: quitar el arco en pantallas pequeñas */
    @media (max-width: 1024px) {
        .tour-card {
            transform: none !important;
        }
    }
</style>
