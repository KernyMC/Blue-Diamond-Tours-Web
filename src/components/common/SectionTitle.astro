---
const { title, subtitle, centered = false } = Astro.props;
---

<div class={`mb-12 ${centered ? "text-center" : ""}`}>
    {
        subtitle && (
            <h3 class="text-turquoise font-bold tracking-[0.2em] uppercase text-sm mb-3 animate-fade-in">
                {subtitle}
            </h3>
        )
    }
    <h2
        class="text-navy text-4xl md:text-5xl font-bold font-serif leading-tight relative inline-block"
    >
        {title}
        <div
            class={`h-1 bg-turquoise w-1/3 mt-4 rounded-full ${centered ? "mx-auto" : ""}`}
        >
        </div>
    </h2>
</div>
