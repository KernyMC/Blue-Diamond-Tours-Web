---
const { variant = "primary", className = "", ...props } = Astro.props;

const variants = {
    primary: "bg-navy text-white hover:bg-turquoise hover:scale-105",
    secondary: "bg-turquoise text-white hover:bg-[#1F5F99] hover:scale-105",
    outline:
        "bg-transparent border-2 border-navy text-navy hover:bg-navy hover:text-white",
    accent: "bg-turquoise text-white hover:bg-white hover:text-navy hover:shadow-xl",
    white: "bg-white text-navy hover:bg-gray-100",
};

const baseStyles =
    "relative overflow-hidden transition-all duration-300 font-bold tracking-wide transform active:scale-95 flex items-center justify-center gap-2";
---

<button class={`${baseStyles} ${variants[variant]} ${className}`} {...props}>
    <slot />
</button>
