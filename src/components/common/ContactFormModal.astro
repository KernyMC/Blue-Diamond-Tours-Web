---
// Contact Form Modal Component
import Loader from "./Loader.astro";
---

<!-- Loader -->
<div id="modalLoader" class="hidden">
    <Loader />
</div>

<!-- Toast Notification -->
<div
    id="successToast"
    class="fixed top-4 right-4 bg-turquoise text-white px-6 py-4 rounded-xl shadow-2xl z-[110] hidden transform transition-all duration-300 translate-x-full"
>
    <div class="flex items-center gap-3">
        <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
        >
            <path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"></path>
            <polyline points="22 4 12 14.01 9 11.01"></polyline>
        </svg>
        <span class="font-semibold">¬°Mensaje enviado correctamente!</span>
    </div>
</div>

<div
    id="contactModal"
    class="fixed inset-0 bg-black/50 backdrop-blur-sm z-[100] hidden items-center justify-center p-4"
>
    <div
        class="bg-white rounded-3xl max-w-4xl w-full max-h-[90vh] overflow-y-auto shadow-2xl relative"
    >
        <!-- Close Button -->
        <button
            id="closeModal"
            class="absolute top-6 right-6 w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-200 flex items-center justify-center transition-colors z-10"
        >
            <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
            >
                <path d="M18 6 6 18"></path>
                <path d="m6 6 12 12"></path>
            </svg>
        </button>

        <!-- Modal Content -->
        <div class="p-8 md:p-12">
            <h2
                class="text-3xl md:text-4xl font-bold text-navy mb-2 font-serif"
            >
                Cont√°ctanos
            </h2>
            <p class="text-gray-600 mb-8">
                Completa el formulario y nos pondremos en contacto contigo lo
                antes posible.
            </p>

            <form id="contactForm" class="space-y-6">
                <!-- Name Fields -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label
                            for="firstName"
                            class="block text-sm font-bold text-navy mb-2"
                        >
                            Nombre <span class="text-red-500">*</span>
                        </label>
                        <input
                            type="text"
                            id="firstName"
                            name="firstName"
                            required
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                        />
                    </div>
                    <div>
                        <label
                            for="lastName"
                            class="block text-sm font-bold text-navy mb-2"
                        >
                            Apellido <span class="text-red-500">*</span>
                        </label>
                        <input
                            type="text"
                            id="lastName"
                            name="lastName"
                            required
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                        />
                    </div>
                </div>

                <!-- Email -->
                <div>
                    <label
                        for="email"
                        class="block text-sm font-bold text-navy mb-2"
                    >
                        Correo Electr√≥nico <span class="text-red-500">*</span>
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        placeholder="tu@correo.com"
                        required
                        class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                    />
                </div>

                <!-- Phone -->
                <div>
                    <label
                        for="phone"
                        class="block text-sm font-bold text-navy mb-2"
                    >
                        Tel√©fono
                    </label>
                    <input
                        type="tel"
                        id="phone"
                        name="phone"
                        placeholder="+593 999 999 999"
                        class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                    />
                </div>

                <!-- Travel Dates -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label
                            for="dateFrom"
                            class="block text-sm font-bold text-navy mb-2"
                        >
                            Fecha de Llegada
                        </label>
                        <input
                            type="date"
                            id="dateFrom"
                            name="dateFrom"
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                        />
                    </div>
                    <div>
                        <label
                            for="dateTo"
                            class="block text-sm font-bold text-navy mb-2"
                        >
                            Fecha de Salida
                        </label>
                        <input
                            type="date"
                            id="dateTo"
                            name="dateTo"
                            class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                        />
                    </div>
                </div>

                <!-- Passengers -->
                <div>
                    <label
                        for="passengers"
                        class="block text-sm font-bold text-navy mb-2"
                    >
                        N√∫mero de Pasajeros
                    </label>
                    <input
                        type="number"
                        id="passengers"
                        name="passengers"
                        min="1"
                        placeholder="N√∫mero de personas"
                        class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all"
                    />
                </div>

                <!-- Activities of Interest -->
                <div>
                    <label class="block text-sm font-bold text-navy mb-3">
                        Actividades de Inter√©s
                    </label>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                name="activities"
                                value="Snorkeling"
                                class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise"
                            />
                            <span class="text-gray-700">Snorkeling</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                name="activities"
                                value="Observaci√≥n de Fauna"
                                class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise"
                            />
                            <span class="text-gray-700"
                                >Observaci√≥n de Fauna</span
                            >
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                name="activities"
                                value="Senderismo"
                                class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise"
                            />
                            <span class="text-gray-700">Senderismo</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                name="activities"
                                value="Kayak"
                                class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise"
                            />
                            <span class="text-gray-700">Kayak</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                name="activities"
                                value="Buceo"
                                class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise"
                            />
                            <span class="text-gray-700">Buceo</span>
                        </label>
                        <label class="flex items-center gap-2 cursor-pointer">
                            <input
                                type="checkbox"
                                name="activities"
                                value="Fotograf√≠a"
                                class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise"
                            />
                            <span class="text-gray-700">Fotograf√≠a</span>
                        </label>
                    </div>
                </div>

                <!-- Message -->
                <div>
                    <label
                        for="message"
                        class="block text-sm font-bold text-navy mb-2"
                    >
                        Mensaje
                    </label>
                    <textarea
                        id="message"
                        name="message"
                        rows="4"
                        placeholder="Cu√©ntanos sobre tus planes de viaje..."
                        class="w-full px-4 py-3 rounded-xl border border-gray-300 focus:border-turquoise focus:ring-2 focus:ring-turquoise/20 outline-none transition-all resize-none"
                    ></textarea>
                </div>

                <!-- Privacy Agreement -->
                <div class="bg-gray-50 p-4 rounded-xl">
                    <label class="flex items-start gap-3 cursor-pointer">
                        <input
                            type="checkbox"
                            name="privacyAgreement"
                            required
                            class="w-4 h-4 text-turquoise border-gray-300 rounded focus:ring-turquoise mt-1"
                        />
                        <span class="text-xs text-gray-600 leading-relaxed">
                            Al hacer clic aqu√≠, acepta recibir mensajes de
                            comunicaci√≥n relacionados con atenci√≥n al cliente de
                            Blue Diamond Tours. La frecuencia de los mensajes
                            puede variar. Pueden aplicarse tarifas est√°ndar de
                            mensajes y datos. Responda STOP para darse de baja.
                            Responda HELP para obtener ayuda. <a
                                href="/privacy"
                                class="text-turquoise hover:underline"
                                >Ver nuestra pol√≠tica de privacidad</a
                            >
                        </span>
                    </label>
                </div>

                <!-- Submit Button -->
                <button
                    type="submit"
                    class="w-full bg-turquoise text-white py-4 rounded-xl font-bold text-lg hover:bg-[#1F5F99] transition-colors shadow-lg hover:shadow-xl"
                >
                    Enviar Mensaje
                </button>

                <!-- Error Message -->
                <div
                    id="errorMessage"
                    class="hidden bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded-xl"
                >
                    Se produjo un error, intentelo mas tarde
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // obtener url donde se encuentra la pagina
    const currentUrl = window.location.href;

    // Modal functionality
    const modal = document.getElementById("contactModal");
    const closeBtn = document.getElementById("closeModal");
    const form = document.getElementById("contactForm");
    const emailInput = document.getElementById("email") as HTMLInputElement;
    const modalLoader = document.getElementById("modalLoader");
    const successToast = document.getElementById("successToast");
    const errorMessage = document.getElementById("errorMessage");

    // Function to show loader
    function showLoader() {
        modalLoader?.classList.remove("hidden");
    }

    // Function to hide loader
    function hideLoader() {
        modalLoader?.classList.add("hidden");
    }

    // Function to show success toast
    function showSuccessToast() {
        if (successToast) {
            successToast.classList.remove("hidden");
            // Trigger animation
            setTimeout(() => {
                successToast.classList.remove("translate-x-full");
            }, 10);

            // Hide after 4 seconds
            setTimeout(() => {
                successToast.classList.add("translate-x-full");
                setTimeout(() => {
                    successToast.classList.add("hidden");
                }, 300);
            }, 4000);
        }
    }

    // Function to show error message
    function showError() {
        errorMessage?.classList.remove("hidden");
    }

    // Function to hide error message
    function hideError() {
        errorMessage?.classList.add("hidden");
    }

    // Function to open modal
    function openContactModal(prefillEmail = "") {
        if (modal) {
            modal.classList.remove("hidden");
            modal.classList.add("flex");
            document.body.style.overflow = "hidden";

            if (prefillEmail && emailInput) {
                emailInput.value = prefillEmail;
            }
        }
    }

    // Function to close modal
    function closeContactModal() {
        if (modal) {
            modal.classList.add("hidden");
            modal.classList.remove("flex");
            document.body.style.overflow = "";
        }
    }

    // Close button click
    closeBtn?.addEventListener("click", closeContactModal);

    // Close on backdrop click
    modal?.addEventListener("click", (e) => {
        if (e.target === modal) {
            closeContactModal();
        }
    });

    // Close on Escape key
    document.addEventListener("keydown", (e) => {
        if (e.key === "Escape" && modal?.classList.contains("flex")) {
            closeContactModal();
        }
    });

    // Form submission
    form?.addEventListener("submit", async (e) => {
        e.preventDefault();

        // Hide any previous error
        hideError();

        // Show loader
        showLoader();

        console.log("üöÄ Formulario enviado");

        // Get form data
        const formData = new FormData(form as HTMLFormElement);
        const data = Object.fromEntries(formData.entries());

        // Get checkboxes separately
        const activities = Array.from(
            document.querySelectorAll('input[name="activities"]:checked'),
        ).map((cb: any) => cb.value);

        data.activities = activities.join(", ");

        console.log("üì¶ Datos del formulario:", data);

        try {
            // Preparar datos para el endpoint
            const requestBody = {
                name: `${data.firstName} ${data.lastName}`,
                email: data.email as string,
                message: `
URL de la p√°gina: ${currentUrl}
Tel√©fono: ${data.phone || "No proporcionado"}
Fecha Llegada: ${data.dateFrom || "No proporcionada"}
Fecha Salida: ${data.dateTo || "No proporcionada"}
Pasajeros: ${data.passengers || "No especificado"}
Actividades: ${data.activities || "Ninguna"}

Mensaje:
${data.message || "Sin mensaje adicional"}
                `.trim(),
            };

            console.log("üì§ Enviando a /api/contact...", requestBody);

            const response = await fetch("/api/contact", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(requestBody),
            });

            console.log("üì• Respuesta recibida:", response.status, response.statusText);

            const result = await response.json();
            console.log("‚úÖ Resultado:", result);

            // Hide loader
            hideLoader();

            if (response.ok) {
                // Show success toast
                showSuccessToast();
                closeContactModal();
                (form as HTMLFormElement).reset();
            } else {
                throw new Error("Error en el servidor");
            }
        } catch (error) {
            console.error("‚ùå Error al enviar el formulario:", error);
            // Hide loader
            hideLoader();
            // Show error message
            showError();
        }
    });

    // Make function globally available
    (window as any).openContactModal = openContactModal;
</script>
