import DetailView from "../../components/views/DetailView.astro";
import { TOURS_DATA } from "../../data/tours";

export async function getStaticPaths() {
  return TOURS_DATA.map((tour) => ({
    params: { id: tour.id.toString() },
    props: { tour },
  }));
}

