---
import Layout from "../layouts/Layout.astro";
import SectionTitle from "../components/common/SectionTitle.astro";
import Card from "../components/cards/Card.astro";
import { sanityClient } from "../lib/sanityClient";

const packages = await sanityClient.fetch(`
    *[_type == "package"]|order(_createdAt desc){
        _id,
        title,
        "slug": slug.current,
        duration,
        price,
        difficulty,
        location,
        rating,
        "image": image.asset->url,
        "includes": coalesce(includes, [])
    }
`);
---

<Layout title="Paquetes | Galápagos Bluediamond">
    <!-- Hero Section -->
    <section
        class="relative h-[60vh] min-h-[400px] flex items-center justify-center overflow-hidden"
    >
        <!-- Background Image -->
        <div class="absolute inset-0 z-0">
            <img
                src="https://images.unsplash.com/photo-1544551763-46a013bb70d5?q=80&w=2070&auto=format&fit=crop"
                alt="Galápagos Packages"
                class="w-full h-full object-cover"
            />
            <div
                class="absolute inset-0 bg-gradient-to-b from-black/60 via-black/50 to-black/70"
            >
            </div>
        </div>

        <!-- Hero Content -->
        <div
            class="relative z-10 container mx-auto px-6 text-center text-white"
        >
            <h1 class="text-5xl md:text-6xl font-bold mb-6 animate-fade-in">
                Paquetes Vacacionales
            </h1>
            <p class="text-xl md:text-2xl text-blue-100 max-w-3xl mx-auto">
                Experiencias completas de varios días en las Islas Encantadas
            </p>
        </div>
    </section>

    <div class="py-20 bg-[#F2F6FA] min-h-screen">
        <div class="container mx-auto px-6">
            {/* Filters */}
            <div class="flex flex-wrap gap-4 mb-12 justify-center">
                <button
                    class="px-6 py-2 bg-navy text-white rounded-full text-sm font-bold shadow-md cursor-pointer"
                    >Todos</button
                >
                <button
                    class="px-6 py-2 bg-white text-gray-600 border border-gray-100 rounded-full text-sm font-bold hover:border-navy hover:text-navy shadow-sm transition-all cursor-pointer"
                    >5 Días</button
                >
                <button
                    class="px-6 py-2 bg-white text-gray-600 border border-gray-100 rounded-full text-sm font-bold hover:border-navy hover:text-navy shadow-sm transition-all cursor-pointer"
                    >8 Días</button
                >
            </div>

            <div
                class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10"
            >
                {
                    packages.map((pkg: any) => (
                        <div class="h-full">
                            <a
                                href={`/paquete/${pkg.slug || pkg._id}`}
                                class="no-underline block h-full"
                            >
                                <Card item={pkg} type="package" />
                            </a>
                        </div>
                    ))
                }
            </div>
        </div>
    </div>

    <style>
        @keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fade-in 1s ease-out;
        }
    </style>
</Layout>
